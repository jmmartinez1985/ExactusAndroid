<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Codigo"
            android:id="@+id/rdcodigo"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n"
            android:id="@+id/rddescripcion"
            android:checked="true"
            android:layout_weight="1"
            android:layout_gravity="center" />

        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/txtingresebusqueda"
        android:textAlignment="center"
        android:textColorHint="#a9a9a9"
        android:hint="Ingrese Busqueda"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:focusable="true"
        android:gravity="left"
        android:editable="false"
        android:ellipsize="start"
        android:textStyle="bold"
        />

        <Button
            android:id="@+id/btnBuscarbusqueda"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:background="@drawable/loginbuttonshape"
            android:text="BUSCAR"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="15sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/lvArticuloLista"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="15dp"
                android:background="@color/backgroundColor"
                android:dividerHeight="4px"
                />

        </LinearLayout>
    </ScrollView>



    <LinearLayout

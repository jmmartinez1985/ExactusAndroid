<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgMiClub"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:src="@drawable/exactus_1"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/exactus_background_1"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/imgUserLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:src="@drawable/user_anon" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Juan Perez"
                    android:textColor="@color/labelTextColor"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="jperez@gmail.com"
                    android:textColor="@color/labelTextColor"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lstMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TableRow>
                <TextView
                    android:id="@+id/txtLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Version 1.01 - 2015"
                    android:layout_margin="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:editable="false"
                    android:ellipsize="start"

                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="ContÃ¡ctenos"
                    android:layout_margin="2dp"
                    android:layout_gravity="left"
                    android:layout_alignParentBottom="true"
                    android:singleLine="true"
                    android:focusable="true"
                    android:editable="false"
                    android:ellipsize="start"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="info@exactus.com"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2dp"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    android:focusable="true"
                    android:gravity="center_horizontal"
                    android:editable="false"
                    android:ellipsize="start"
                    android:textColor="#0000FF"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtLabel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="+507 60606060"
                    android:layout_margin="2dp"
                    android:layout_gravity="left"
                    android:layout_alignParentBottom="true"
                    android:singleLine="true"
                    android:focusable="true"
                    android:editable="false"
                    android:ellipsize="start"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txtLabel5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Copyright jp"
                    android:layout_margin="2dp"
                    android:layout_gravity="left"
                    android:layout_alignParentBottom="true"
                    android:singleLine="true"
                    android:focusable="true"
                    android:editable="false"
                    android:ellipsize="start"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</LinearLayout>

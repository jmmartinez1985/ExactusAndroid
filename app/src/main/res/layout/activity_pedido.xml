<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollviewgeneral"
    android:orientation="vertical"
    android:padding="0dp"
    android:fillViewport="false"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtCliente"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:hint="Cliente"
                android:textSize="20sp"
                android:inputType="text"
                android:maxLength="20"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:focusable="true"
                android:gravity="left"
                android:editable="false"
                android:ellipsize="start"
                android:textStyle="bold"/>



            <Button
                android:id="@+id/btnCliente"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="BUSCAR"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="15sp"
                android:background="@drawable/loginbuttonshape"
                android:elegantTextHeight="false"
                android:textStyle="bold"/>

        </LinearLayout>







        <EditText
            android:id="@+id/txtNombreCuenta"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:hint="Nombre de Cuenta"
            android:textSize="20sp"
            android:inputType="text"
            android:maxLength="20"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:singleLine="true"
            android:focusable="true"
            android:editable="false"
            android:ellipsize="start"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtBodega"
                android:textAlignment="center"
                android:textColorHint="@color/white"
                android:hint="Bodega"
                android:textSize="20sp"
                android:inputType="text"
                android:maxLength="20"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:singleLine="true"
                android:focusable="true"
                android:gravity="left"
                android:editable="false"
                android:ellipsize="start"
                android:textStyle="bold"/>



            <Button
                android:id="@+id/btnBodega"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="BUSCAR"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="15sp"
                android:background="@drawable/loginbuttonshape"
                android:elegantTextHeight="false"
                android:textStyle="bold"

                />

        </LinearLayout>

        <EditText
            android:id="@+id/txtObservacion"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:hint="Observaciones"
            android:textSize="20sp"
            android:inputType="text"
            android:maxLength="20"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:singleLine="true"
            android:focusable="true"
            android:editable="false"
            android:ellipsize="start"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/txtOrdenDeCompras"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:hint="Orden De Compra"
            android:textSize="20sp"
            android:inputType="text"
            android:maxLength="20"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:focusable="true"
            android:editable="false"
            android:ellipsize="start"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnAgregarLinea"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_margin="4dp"
                android:padding="8dp"
                android:text="AGREGAR DETALLE"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textSize="15sp"
                android:background="@drawable/loginbuttonshape"
                android:elegantTextHeight="false"
                android:textStyle="bold"

                />





        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/lvLineas"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp"
            android:background="@color/backgroundColor"
            android:dividerHeight="4px" />

    </LinearLayout>

    </LinearLayout>
</ScrollView>





        <LinearLayout
            android:id="@+id/bottomNavBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_margin="0dp">
        <Button
            android:id="@+id/btnCrearPedido"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbuttonshape"
            android:elegantTextHeight="false"
            android:shadowColor="#A8A8A8"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="Crear Pedido" />
        </LinearLayout>



    </RelativeLayout>

</FrameLayout>
